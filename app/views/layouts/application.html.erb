<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Datacom Synergy" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Datacom Synergy" %>">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

      <%= render 'layouts/navigation' %>
      <div class="content">
              <%= image_tag "datacom.png", class: 'image_tag_header' %>
         <%= render 'layouts/messages' %>
         <%= yield %>
      </div>
  </body>
</html>
