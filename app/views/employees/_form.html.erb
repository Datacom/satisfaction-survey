<div class="authform">
<%= simple_form_for(@employee) do |f| %>

    <h3>New Employee</h3>
  <%= f.error_notification %>

    <div class="form-group">
    <%= f.input :name, :autofocus => true, class: 'form-control'  %>
    </div>
     <div class="form-group">
      <%= f.input :email, class: 'form-control', placeholder: 'email' %>
    </div>
    <div class="form-group">
      <%= f.input :unit, class: 'form-control', placeholder: 'unit' %>
    </div>
    <div class="form-group">
    <h5> Please select manager </h5>
    <%= f.collection_select :user_id, User.all, :id, :name %>
    </div>
    <%= f.button :submit, class: "button right" %>
  </div>

  <div class="form-actions">

  </div>
<% end %>

